                                    <tr>
                                        <th data-type="numeric" data-sort-initial="true"> </th>
                                        <th> Фото </th>
                                        <th data-sort-ignore="true"> Объявление </th>
                                        <th data-type="numeric"> Цена </th>
                                        <th> Опции </th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in @Model)
                                {
                                    <tr>
                                        <td style="width: 2%" class="add-img-selector">
                                            <div class="checkbox">
                                                <label>
