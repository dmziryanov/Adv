@Styles.Render("~/plugins/summernoteStyles")
@Scripts.Render("~/plugins/summernote")

@model DAL.BlogPost

<script src="/assets/plugins/summernote/summernote.min.js"></script>
<script src="/assets/plugins/summernote/jquery.tooltip.min.js"></script>

<script>
    $(document).ready(function () {
        $('.summernote').summernote();

    });
</script>

<div class="mail-box">
    <div class="mail-body">
        @using (Html.BeginForm("Post", "Blog", new {Id = @Model.BlogId }, FormMethod.Post,  new {@class = "form-horizontal", @enctype = "multipart/form-data"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <input type="text" name="BlogId" style="visibility: hidden" id="BlogId" class="form-control" value="@Model.BlogId"/>
                <div class=" form-group">
                    <label class="col-sm-2 control-label">Тема:</label>
                    <div id="MessageTitle" class="col-sm-10">
                        <input type="text" id="Topic" name="Topic" class="form-control" value="">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label" for="textarea"> Изображения </label>
                    <div class="col-md-8">
                        <div class="mb10">
                            <input id="somename" name="somename" type="file" class="file" data-preview-file-type="text">
                        </div>
                        <p class="help-block">Добавьте 1 главную фотографию шапки, рекомендуемый формат 600 х 800, размер не более 100Кб.</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="textarea">Текст </label>
                    <div class="col-md-8">
                        <textarea class="form-control" id="Body" name="Body">О чем это я? Ах, да...</textarea>
                    </div>
                </div>
                <div class="col-md-8">
                    <input class="btn btn-primary btn-lg" type="submit" value="Опубликовать"/>
                </div>
            </fieldset>
        }
    </div>
</div>