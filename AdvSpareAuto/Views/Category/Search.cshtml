<script type="text/javascript">

    currentPage = 1;
    maxPages = 1;
    defaultPageNum = 1;

    String.format = function () {
        var theString = arguments[0];
        for (var i = 1; i < arguments.length; i++) {
            var regEx = new RegExp("\\{" + (i - 1) + "\\}", "gm");
            theString = theString.replace(regEx, arguments[i]);
        }

        return theString;
    }

    function DeleteBook(href) {
        $.ajax({
            url: href.delurl
        });
        GetServerData(defaultPageNum);
    }

    function refreshPager(pageNum, nextOper) {
        $.ajax({
            url: String.format("/Adv/GetPagesData?currentPage={0}&SortBy={1}&keywords={2}&location={3}&country={4}&category={5}&minPrice={6}&maxPrice={7}&type={8}&condition={9}", pageNum, $("#SortBy option:selected").text(), $("#keywords").val(), $("#id-location").val(), $("#country span").val(), $("#category span").val(), $("#minPrice").val(), $("#maxPrice").val(), $("#ajaxTabs .active").attr("i"), $("#condition").val()),
            method: 'GET',
            datatype: 'json',
            data: { query: 'test' },
            success: function (pdata) {
                pagedata = pdata;
                maxPages = pdata.length;
                if (pageNum < 1) pageNum = 1;
                if (pageNum > maxPages) pageNum = maxPages;
                currentPage = pageNum;
                ko.mapping.fromJS(pagedata, {}, viewModel.PagedItems);
                $(".pageItem").removeClass("selectedItem");
                $(".pageItem:eq(" + pageNum + ")").addClass("selectedItem");

            }
        }).success(function () {
            $('.pager-btn').each(function(index, el) {
                
                if (el.innerHTML == pageNum) {
                    $(el.parentNode).addClass("active");
                }
            });
            nextOper(currentPage);
        });


    }

    function refreshBooks(pageNum) {
        $.getJSON(String.format("/Adv/GetData?currentPage={0}&SortBy={1}&keywords={2}&location={3}&country={4}&category={5}&minPrice={6}&maxPrice={7}&type={8}&condition={9}", pageNum, $("#SortBy option:selected").text(), $("#keywords").val(), $("#id-location").val(), $("#country span").val(), $("#category span").val(), $("#minPrice").val(), $("#maxPrice").val(), $("#ajaxTabs .active").attr("i"), $("#condition").val()),
            function (booksdata) {
                booksdata.forEach(function (el) {
                    el.Delete = function () {
                        $.ajax({
                            url: el.deleteurl
                        });
                        GetServerData(defaultPageNum);
                    }
                });
                ko.mapping.fromJS(booksdata, {}, viewModel.Advs);
            });
    }

    function GetServerData(pageNum) {
        refreshPager(pageNum, refreshBooks);
    }

    function ViewModel() {
        var self = this;

        self.Advs = ko.observableArray([]);
        self.PagedItems = ko.observableArray([]);
    }

    viewModel = new ViewModel();

    function LoadData() {
        GetServerData(defaultPageNum);
        $(".dropdown").bind("change", function () { GetServerData(defaultPageNum); });

    }

    $(document).ready(function () {
        LoadData();
        ko.applyBindings(viewModel);

        $('#SearchBtn').click(function () {
            LoadData();
        });

        $(document).ready(function () {
            filterCountry = function (id) {
                $('#id-location option').attr('style', 'visibility:hidden; display:none;');
                $('#id-location option').first().attr('style', 'visibility:visible; display:block;');
                $('[countryid="' + id + '"').attr('style', 'visibility:visible; display:block;');
            }
            filterCountry(643); //Russia
        });
    });
</script>

